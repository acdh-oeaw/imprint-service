{
	"name": "@acdh-oeaw/imprint-service",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"bun": "1.x"
	},
	"scripts": {
		"build": "bun build --target=bun --outfile=index.js ./src/index.ts",
		"dev": "bun run --hot src/index.ts | pino-pretty",
		"format:check": "oxfmt --check",
		"format:fix": "oxfmt --write",
		"lint:check": "oxlint --report-unused-disable-directives --type-aware",
		"lint:fix": "oxlint --fix --report-unused-disable-directives --type-aware",
		"setup": "is-in-ci || simple-git-hooks",
		"test": "bun test src/index.test.ts",
		"types:check": "tsc --noEmit"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.7",
		"@acdh-oeaw/validate-env": "^0.2.1",
		"hono": "^4.11.1",
		"hono-pino": "^0.10.3",
		"pino": "^10.1.0",
		"rehype-stringify": "^10.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"templite": "^1.2.0",
		"unified": "^11.0.5",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@types/bun": "latest",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.7",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.34.0",
		"oxlint-tsgolint": "^0.10.0",
		"pino-pretty": "^13.1.3",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"oxlint --fix --report-unused-disable-directives --type-aware",
			"oxfmt --write"
		],
		"*.!(js|ts)": "oxfmt --no-error-on-unmatched-pattern --write"
	},
	"simple-git-hooks": {
		"pre-commit": "bun lint-staged"
	}
}
