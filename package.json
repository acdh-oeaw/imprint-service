{
	"name": "@acdh-oeaw/imprint-service",
	"private": true,
	"license": "MIT",
	"type": "module",
	"exports": {
		".": "./dist/index.mjs"
	},
	"engines": {
		"node": "^24"
	},
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"build": "tsdown ./src/index.ts",
		"dev": "dotenv -c development -- tsx watch ./src/index.ts",
		"format:check": "prettier . --cache --check",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:fix": "pnpm run lint:check --fix",
		"preinstall": "npx only-allow pnpm",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "dotenv -c production -- node ./dist/index.mjs",
		"test": "dotenv -c test -- node --test --test-reporter spec ./test/**/*.test.ts",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.7",
		"cors": "^2.8.5",
		"express": "^5.2.0",
		"rehype-stringify": "^10.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"templite": "^1.2.0",
		"unified": "^11.0.5",
		"valibot": "^1.2.0",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@acdh-oeaw/commitlint-config": "^3.0.0",
		"@acdh-oeaw/eslint-config": "^2.0.11",
		"@acdh-oeaw/eslint-config-node": "^2.0.11",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@commitlint/cli": "^20.1.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.1",
		"@types/supertest": "^6.0.3",
		"dotenv-cli": "^11.0.0",
		"eslint": "^9.39.1",
		"eslint-config-flat-gitignore": "^2.1.0",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.7",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.7.3",
		"supertest": "^7.1.4",
		"tsdown": "^0.16.8",
		"typescript": "^5.9.3"
	},
	"commitlint": {
		"extends": "@acdh-oeaw/commitlint-config"
	},
	"lint-staged": {
		"*.@(ts)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --write"
		],
		"*.!(ts)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged"
	}
}
